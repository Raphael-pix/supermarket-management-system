generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Role {
    USER
    ADMIN
}

model User {
    id          String    @id @default(cuid())
    password    String
    firstName   String?
    lastName    String?
    email       String    @unique
    role        Role      @default(USER)
    createdAt   DateTime  @default(now())
    lastLoginAt DateTime?

    promotedAt    DateTime?
    promotedById  String?
    promotedBy    User?          @relation("UserPromotion", fields: [promotedById], references: [id])
    promotedUsers User[]         @relation("UserPromotion")
    restockLogs   RestockLog[]
    hqRestockLogs HqRestockLog[]
}

model Branch {
    id        String   @id @default(cuid())
    name      String   @unique
    location  String
    isHQ      Boolean  @default(false)
    createdAt DateTime @default(now())

    inventory Inventory[]
    sales     Sale[]

    outgoingRestocks RestockLog[]   @relation("FromBranch")
    incomingRestocks RestockLog[]   @relation("ToBranch")
    hqRestockLogs    HqRestockLog[]
}

model Product {
    id          String   @id @default(cuid())
    name        String   @unique
    description String?
    price       Decimal  @db.Decimal(10, 2)
    createdAt   DateTime @default(now())

    inventory       Inventory[]
    saleItems       SaleItem[]
    restockLogItems RestockLogItem[]
    hqRestockItems  HqRestockItem[]
}

model Inventory {
    id                String   @id @default(cuid())
    branchId          String
    productId         String
    quantity          Int
    lowStockThreshold Int      @default(50)
    lastRestocked     DateTime

    branch  Branch  @relation(fields: [branchId], references: [id])
    product Product @relation(fields: [productId], references: [id])

    @@unique([branchId, productId])
}

model Sale {
    id                String   @id @default(cuid())
    branchId          String
    totalAmount       Decimal  @db.Decimal(10, 2)
    checkoutRequestId String   @unique
    mpesaReference    String?
    transactionDate   DateTime @default(now())

    branch Branch     @relation(fields: [branchId], references: [id])
    items  SaleItem[]

    @@index([transactionDate])
}

model SaleItem {
    id          String  @id @default(cuid())
    saleId      String
    productId   String
    quantity    Int
    priceAtSale Decimal @db.Decimal(10, 2)
    subtotal    Decimal @db.Decimal(10, 2)

    sale    Sale    @relation(fields: [saleId], references: [id])
    product Product @relation(fields: [productId], references: [id])
}

model RestockLog {
    id            String   @id @default(cuid())
    fromBranchId  String
    toBranchId    String
    performedById String
    notes         String?
    createdAt     DateTime @default(now())

    // Relations
    fromBranch  Branch @relation("FromBranch", fields: [fromBranchId], references: [id])
    toBranch    Branch @relation("ToBranch", fields: [toBranchId], references: [id])
    performedBy User   @relation(fields: [performedById], references: [id])

    items RestockLogItem[]

    @@index([fromBranchId])
    @@index([toBranchId])
    @@index([performedById])
}

model RestockLogItem {
    id String @id @default(cuid())

    restockLogId String
    productId    String

    quantity Int

    // Relations
    restockLog RestockLog @relation(fields: [restockLogId], references: [id], onDelete: Cascade)
    product    Product    @relation(fields: [productId], references: [id])

    @@index([restockLogId])
    @@index([productId])
}

model HqRestockLog {
    id         String @id @default(cuid())
    hqBranchId String
    hqBranch   Branch @relation(fields: [hqBranchId], references: [id])

    performedById String
    performedBy   User   @relation(fields: [performedById], references: [id])

    supplierName String?
    referenceNo  String? // Invoice / delivery note
    notes        String?

    items HqRestockItem[]

    createdAt DateTime @default(now())
}

model HqRestockItem {
    id          String       @id @default(cuid())
    hqRestockId String
    hqRestock   HqRestockLog @relation(fields: [hqRestockId], references: [id])

    productId String
    product   Product @relation(fields: [productId], references: [id])

    quantity Int
    unitCost Float? // Optional but important later
}
